<table class="table is-fullwidth table is-bordered $table-row-active-background-color">
  <thead>
    <tr style="background-color: lightblue; color: green;">
      <th>Track</th>
      <th>Artist</th>
      <th>Duration</th>
      <th>Delete</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each playlist.tracks}}
    <tr>
      <td>
        {{title}}
      </td>
      <td>
        {{artist}}
      </td>
      <td>
        {{duration}}
      </td>
      <td>
        <a href="/playlist/{{../playlist._id}}/deletetrack/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
      </td>
      <td>
        <a href="/playlist/{{../playlist._id}}/edittrack/{{_id}}" class="button">
          {{>icons/edit}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>