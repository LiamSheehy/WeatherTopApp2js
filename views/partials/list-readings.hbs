<table class="table is-fullwidth table is-bordered $table-row-active-background-color">
  <thead>
    <tr style="background-color: lightblue; color: green;">
       <th class="has-text-centered">Code</th>
      <th class="has-text-centered">Temp</th>
      <th class="has-text-centered">Wind Speed</th>
      <th class="has-text-centered">Wind Direction</th>
      <th class="has-text-centered">Pressure</th>
      <th class="has-text-centered">Longitude</th>
      <th class="has-text-centered">Latitude</th>
      <th class="has-text-centered">Delete</th>
      <th class="has-text-centered">Edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
    <tr>
      <td class="has-text-centered">
        {{code}}
      </td>
      <td class="has-text-centered">
        {{temp}}
      </td>
      <td class="has-text-centered">
        {{windSpeed}}
      </td>
      <td class="has-text-centered">
        {{windDirection}}
      </td>
      <td class="has-text-centered">
        {{pressure}}
      </td>
      <td class="has-text-centered">
        {{longitude}}
      </td>
      <td class="has-text-centered">
        {{latitude}}
      </td>
      <td class="has-text-centered">
        <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
      </td>
      <td class="has-text-centered">
        <a href="/station/{{../station._id}}/editreading/{{_id}}" class="button">
          {{>icons/edit}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
