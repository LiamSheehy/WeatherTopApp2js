{{> menu}}

<section class="section">
  <div class="title">
    {{station.title}}
  </div>
  <div class="subtitle">
    Shortest Readings
  </div>
  
  <div class="columns">
    <div class="column">
      <div class="card has-background-link-light">
        <div class="card-content">
          <p class="title is-4">Station</p>
          <p class="subtitle is-6">{{station.title}}</p>
        </div>
      </div>
    </div>
    
    <div class="column">
      <div class="card has-background-link-light">
        <div class="card-content">
          <p class="title is-4">Weather</p>
          <p class="subtitle is-6">{{shortestReading.code}}</p>
        </div>
      </div>
    </div>
    
  <div class="column">
  <div class="card has-background-link-light">
    <div class="card-content">
      <p class="title is-4">Temp</p>
      <p class="subtitle is-6">{{shortestReading.temp}}</p>
      <span class="icon is-large has-text-warning" style="position: absolute; top: 10px; right: 10px;">
        <i class="fa fa-map-marker fa-3x" aria-hidden="true"></i>
      </span>
    </div>
  </div>
</div>


    
    <div class="column">
      <div class="card has-background-link-light">
        <div class="card-content">
          <p class="title is-4">Wind Speed</p>
          <p class="subtitle is-6">{{shortestReading.windSpeed}}</p>
        </div>
      </div>
    </div>
    
    <div class="column">
      <div class="card has-background-link-light">
        <div class="card-content">
          <p class="title is-4">Pressure</p>
          <p class="subtitle is-6">{{shortestReading.pressure}}</p>
          
        </div>
      </div>
    </div>
  </div>
  
  {{> list-readings}}
  {{> add-reading}}
</section>
